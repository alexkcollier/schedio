{
  "name": "schedio-design",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm run build:js && npm run build:storybook",
    "build:js": "vue-cli-service build",
    "lint": "npm run lint:js && npm run lint:style",
    "serve:storybook": "vue-cli-service serve:storybook -p 6006 -c config/storybook",
    "build:storybook": "vue-cli-service build:storybook -c config/storybook",
    "lint:js": "vue-cli-service lint",
    "lint:style": "vue-cli-service lint:style",
    "theo": "theo ./src/assets/tokens/tokens.yml --transform web --format map.scss,scss,raw.json,json --dest ./src/assets/styles/tokens",
    "theo:onchange": "onchange \"./src/tokens/*.yml\" -- npm run theo"
  },
  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@ascendancyy/vue-cli-plugin-stylelint": "^1.1.0",
    "@storybook/addon-actions": "^4.0.0-alpha.20",
    "@storybook/addon-links": "^4.0.0-alpha.20",
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "@vue/eslint-config-standard": "^3.0.1",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.0",
    "prettier": "^1.14.2",
    "sass-loader": "^7.0.1",
    "style-resources-loader": "^1.2.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.3.0",
    "theo": "^8.0.0-beta.2",
    "vue-cli-plugin-storybook": "^0.4.6",
    "vue-cli-plugin-style-resources-loader": "^0.1.3",
    "vue-template-compiler": "^2.5.17"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint && vue-cli-service lint:style",
      "git add"
    ],
    "*.scss": [
      "vue-cli-service lint:style",
      "git add"
    ]
  }
}
